#include<stdio.h>
#include<locale.h>
#include<conio.h>
#include<stdlib.h>
#include<windows.h>

void conta()
{
    return(0);
    }

void car()
{
     int i;
        system("cls");
        printf("Obrigado por utilizar!\nSaindo ");

        for(i=0;i<10;i++)
        {
            Sleep(100);
            printf(".");
        }
}

void main()
{
    setlocale(LC_ALL,"portuguese");
    char aux;

    printf("---------------------------------------------------\nOlá, seja bem vindo !\n---------------------------------------------------\n");
    while (1)
    {
        conta();

        printf("\nColocar outro número (s/n)? ");
        scanf("%s",&aux);
        system("color 7");

        if (aux == 'n')
        {
            car();
            break;
        }
    }

}
